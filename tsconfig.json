{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "paths": {
      "lazy": ["modules/lazy"]
    },
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "types": [
      "jasmine"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
